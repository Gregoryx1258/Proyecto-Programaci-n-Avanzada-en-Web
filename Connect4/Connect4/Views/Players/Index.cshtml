@model IEnumerable<Connect4.Database.Players>
@{
    Layout = null;
    ViewBag.Title = "Listado de Jugadores";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Jugadores - Connect4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f1f8f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h2 {
            margin-top: 40px;
            color: #213435;
            font-size: 36px;
        }

        table {
            width: 90%;
            max-width: 1100px;
            border-collapse: collapse;
            margin-top: 30px;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px 20px;
            text-align: center;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #213435;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        tr:hover {
            background-color: #e0f2f1;
        }

        footer {
            margin-top: auto;
            margin-bottom: 10px;
            font-size: 12px;
            color: #666;
        }
    </style>
</head>
<body>
    <h2>Listado de Jugadores</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Puntaje</th>
                <th>Ganados</th>
                <th>Perdidos</th>
                <th>Empates</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jugador in Model)
            {
                <tr>
                    <td>@jugador.Id</td>
                    <td>@jugador.Identification</td>
                    <td>@jugador.Name</td>
                    <td>@jugador.Score</td>
                    <td>@jugador.Wins</td>
                    <td>@jugador.Losses</td>
                    <td>@jugador.Draws</td>
                </tr>
            }
        </tbody>
    </table>

    <footer>© 2025 - Proyecto Connect4</footer>
</body>
</html>
