@model IEnumerable<Connect4.Database.Players>
@{
    Layout = null;
    ViewBag.Title = "Listado de Jugadores";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Jugadores - Connect4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #1a1a2e, #16213e);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            color: #fff;
        }

        header {
            width: 100%;
            background-color: #0f0f1a;
            padding: 25px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-sizing: border-box;
        }

        .logo {
            font-size: 28px;
            font-weight: bold;
        }

        .actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

            .actions a {
                text-decoration: none;
                padding: 10px 18px;
                border-radius: 4px;
                font-weight: bold;
                color: #fff;
            }

        .btn-disabled {
            background-color: #555;
            cursor: default;
            pointer-events: none;
        }

        main {
            width: 100%;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
            box-sizing: border-box;
        }

        h2 {
            margin-bottom: 30px;
            font-size: 36px;
            color: #e0f7fa;
        }

        table {
            width: 90%;
            max-width: 1100px;
            border-collapse: collapse;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
            color: black;
        }

        th, td {
            padding: 15px 20px;
            text-align: center;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #213435;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        tr:hover {
            background-color: #e0f2f1;
        }

        footer {
            width: 100%;
            background-color: #0f0f1a;
            padding: 25px 30px;
            text-align: center;
            font-size: 14px;
            color: white;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">Connect4</div>
        <div class="actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Inicio</a>
            <a href="@Url.Action("CreatePlayer", "Players")" class="btn text-dark btn-warning">Crear Jugador</a>
            <a href="@Url.Action("Index", "Players")" class="btn btn-success  btn-disabled">Ver Jugadores</a>
            <a href="@Url.Action("Index", "Games")" class="btn text-dark btn-light">Registro de partidas</a>
            <a href="@Url.Action("Create", "Games")" class="btn btn-danger">Crear Partida</a>
        </div>
    </header>

    <main>
        <h2>Listado de Jugadores</h2>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>CÃ©dula</th>
                    <th>Nombre</th>
                    <th>Puntaje</th>
                    <th>Ganados</th>
                    <th>Perdidos</th>
                    <th>Empates</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var jugador in Model)
                {
                    <tr>
                        <td>@jugador.Id</td>
                        <td>@jugador.Identification</td>
                        <td>@jugador.Name</td>
                        <td>@jugador.Score</td>
                        <td>@jugador.Wins</td>
                        <td>@jugador.Losses</td>
                        <td>@jugador.Draws</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="actions">
            <a href="@Url.Action("RecalcularEstadisticasManual", "Games")" class="btn-blue mt-4"> 
                Recalcular estad&iacutesticas
            </a>
        </div>

    </main>

    <footer>&copy; @DateTime.Now.Year - Proyecto Connect4</footer>
</body>
</html>
