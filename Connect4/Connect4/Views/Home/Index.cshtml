@{
    Layout = null;
    ViewBag.Title = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Connect4 - Inicio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #1a1a2e, #16213e);
            color: white;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            width: 100%;
            background-color: #0f0f1a;
            padding: 25px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
            box-sizing: border-box;
        }

        .logo {
            font-size: 28px;
            font-weight: bold;
        }

        .actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

            .actions a {
                text-decoration: none;
                padding: 10px 18px;
                border-radius: 4px;
                font-weight: bold;
                color: #fff;
            }

        .btn-green {
            background-color: #43a047;
        }

        .btn-blue {
            background-color: #1e88e5;
        }

        .btn-cyan {
            background-color: #00bcd4;
        }

        .btn-disabled {
            background-color: #555;
            cursor: default;
            pointer-events: none;
        }

        main {
            text-align: center;
            padding: 80px 20px;
            flex: 1;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 20px;
            color: #ffffff;
        }

        p {
            font-size: 18px;
            margin-bottom: 40px;
            color: #e0e0e0;
        }

        .btn-container {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

            .btn-container a {
                padding: 15px 30px;
                font-size: 16px;
                border-radius: 8px;
                color: white;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                .btn-container a:hover {
                    opacity: 0.85;
                }

        footer {
            width: 100%;
            background-color: #0f0f1a;
            padding: 25px 30px;
            text-align: center;
            font-size: 14px;
            color: white;
            margin-top: auto;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">Connect4</div>
        <div class="actions">
            <a class="btn-green btn-disabled">Inicio</a>
            <a href="@Url.Action("Index", "Players")" class="btn-blue">Ver Jugadores</a>
            <a href="@Url.Action("Index", "Games")" class="btn-cyan">Registro de partidas</a>
        </div>
    </header>

    <main>
        <h1>Bienvenido a Connect4</h1>
        <p>Selecciona una opción para comenzar</p>

        <div class="btn-container">
            <a href="@Url.Action("Index", "Players")" class="btn-blue">Ver Jugadores</a>
            <a href="@Url.Action("Create", "Games")" class="btn-green">Crear Partida</a>
            <a href="@Url.Action("Index", "Games")" class="btn-cyan">Ver Partidas</a>
            <a href="@Url.Action("CreatePlayer", "Players")" class="btn-cyan">Crear Jugador</a>


        </div>
    </main>

    <footer>&copy; @DateTime.Now.Year - Proyecto Connect4</footer>
</body>
</html>
