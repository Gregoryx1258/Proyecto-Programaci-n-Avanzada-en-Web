@model IEnumerable<Connect4.Database.Games>
@{
    Layout = null;
    ViewBag.Title = "Lista de Partidas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Partidas - Connect4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #1a1a2e, #16213e);
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        header {
            display: flex;
            justify-content: center;
            gap: 15px;
            padding: 15px;
            background-color: #0f0f1a;
            width: 100%;
        }

        .btn {
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 4px;
            font-weight: bold;
            color: white;
        }

        .btn-disabled {
            background-color: #555;
            cursor: default;
            pointer-events: none;
        }

        h2 {
            margin-top: 20px;
            font-size: 36px;
            color: #e0f7fa;
        }

        table {
            width: 90%;
            max-width: 1100px;
            border-collapse: collapse;
            margin: 30px auto;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
            color: black;
        }

        th, td {
            padding: 15px 20px;
            text-align: center;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #213435;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        tr:hover {
            background-color: #e0f2f1;
        }

        .btn-view {
            background-color: #2196f3;
            color: white;
            padding: 6px 14px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }

            .btn-view:hover {
                background-color: #1769aa;
            }

        footer {
            margin-top: auto;
            margin-bottom: 10px;
            color: white;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <header>
        <div class="actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Inicio</a>
            <a href="@Url.Action("CreatePlayer", "Players")" class="btn text-dark btn-warning">Crear Jugador</a>
            <a href="@Url.Action("Index", "Players")" class="btn btn-success">Marcadores</a>
            <a href="@Url.Action("Index", "Games")" class="btn text-dark btn-light btn-disabled">Registro de partidas</a>
            <a href="@Url.Action("Create", "Games")" class="btn btn-danger">Crear Partida</a>
        </div>
    </header>

    <h2>Partidas Registradas</h2>

    <table>
        <thead>
            <tr>
                <th>Jugador 1</th>
                <th>Jugador 2</th>
                <th>Estado</th>
                <th>Ganador</th>
                <th>Creado el</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                string jugador1 = game.Players1?.Name ?? "Jugador 1";
                string jugador2 = game.Players2?.Name ?? "Jugador 2";
                string ganador;

                if (game.Status == "Finalizado")
                {
                    if (game.WinnerId.HasValue)
                    {
                        ganador = game.WinnerId == game.Player1Id ? jugador1 :
                                  game.WinnerId == game.Player2Id ? jugador2 : "Desconocido";
                    }
                    else
                    {
                        ganador = "Empate";
                    }
                }
                else
                {
                    ganador = "En curso";
                }

                <tr>
                    <td>@jugador1</td>
                    <td>@jugador2</td>
                    <td>@game.Status</td>
                    <td>@ganador</td>
                    <td>@game.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @Html.ActionLink("Ver", "Board", new { id = game.Id }, new { @class = "btn-view" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <footer>&copy; @DateTime.Now.Year - Proyecto Connect4</footer>
</body>
</html>
